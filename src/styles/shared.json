{
  "colors": {
    "white": {
      "color": "#fff"
    }
  },
  "whitespace": {
    "margins": {
      "m0":  {"margin": 0 },
      "mt0": {"marginTop": 0 },
      "mr0": {"marginRight": 0 },
      "mb0": {"marginBottom": 0 },
      "ml0": {"marginLeft": 0 }
    },
    "paddings": {
      "p0":  {"padding": 0 },
      "pt0": {"paddingTop": 0 },
      "pr0": {"paddingRight": 0 },
      "pb0": {"paddingBottom": 0 },
      "pl0": {"paddingLeft": 0 },
      "p8":  {"padding": "8px" },
      "pt8": {"paddingTop": "8px" },
      "pr8": {"paddingRight": "8px" },
      "pb8": {"paddingBottom": "8px" },
      "pl8": {"paddingLeft": "8px" }
    }
  },
  "background": {
    "size": {
      "cover": {
        "backgroundSize": "cover"
      }
    }
  },
  "text": {
    "size": {
      "smaller": {
        "fontSize": ".6rem"
      },
      "small": {
        "fontSize": ".8rem"
      },
      "medium": {
        "fontSize": "1rem"
      },
      "large": {
        "fontSize": "1.2rem"
      },
      "larger": {
        "fontSize": "1.4rem"
      },
      "xlarge": {
        "fontSize": "1.6rem"
      },
      "xxlarge": {
        "fontSize": "1.8rem"
      }
    },
    "align": {
      "left": {
        "textAlign": "left"
