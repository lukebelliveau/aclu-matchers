      "two": {
        "textShadow": "2px 2px 1px #000"
      }
    },
    "decoration": {
      "none": {
        "textDecoration": "none"
      }
    }
  },
  "font": {
    "weight": {
      "bold": {
        "fontWeight": "bold"
      }
    },
    "style": {
      "italic": {
        "fontStyle": "italic"
      }
    },
    "family": {
      "serif": {
        "fontFamily": "Cambria, 'Hoefler Text', Utopia, 'Liberation Serif', 'Nimbus Roman No9 L Regular', Times, 'Times New Roman', serif"
      },
      "sansSerif": {
        "fontFamily": "Calibri, Arial, sans-serif"
      }
    }
